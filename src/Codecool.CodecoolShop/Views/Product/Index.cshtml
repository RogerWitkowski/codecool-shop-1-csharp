@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Products</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp;
                Create New Product
            </a>
        </div>
    </div>
    <br/>
    <br/>


<table class="table table-bordered table-striped" style="width: 100vh">
    <thead>
    <tr>
        <th>Product Name</th>
        <th>Descryption</th>
        <th>Category</th>
        <th>Price</th>
        <th>Quantity</th>
        <th></th>
    </tr>
    </thead>
    <br />
    <tbody>
    @foreach(var obj in Model)
    {
        <tr>
            <td>
                @obj.Name
            </td>
            <td>
                @obj.Description
            </td>
            <td>
                @obj.ProductCategory
            </td>
            <td>
                @obj.DefaultPrice PLN
            </td>
            <td>
                @obj.Quantity
            </td>
            <td>
                <div class="w-75 btn-group" role="group">
                    <a asp-controller="Product" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> Edit</a>
                </div>
            </td>
        </tr>
    }
    </tbody>
</table>
</div>